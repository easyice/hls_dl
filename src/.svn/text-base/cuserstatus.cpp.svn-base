#include "cuserstatus.h"

CUserStatus::CUserStatus()
	:m_zevntWrite("CUserStatus/")
{
	m_emStatus = ST_READY;
	m_zevntWrite.Reset();
}

CUserStatus::~CUserStatus()
{

}

bool CUserStatus::WaitForReady(int nTimeoutMs)
{
        if (m_emStatus == ST_READY)
        {
                return true;
        }
        
        long long first  = time(0);
        m_zevntWrite.Wait(nTimeoutMs);
        long long diff = time(0);
        diff -= first;
        
        ZLOG(ZLT_INFO,"WaitForReady",V(diff));
        if ( m_emStatus != ST_READY)
        {
                return false;
        }
        
        return true;
}

void CUserStatus::SetStatus(USER_TASK_STATUS_T st)
{
	m_emStatus = st;
	if (m_emStatus == ST_READY)
	{
		m_zevntWrite.Set();
	}
}

USER_TASK_STATUS_T CUserStatus::GetStatus()
{
	return m_emStatus;
}
