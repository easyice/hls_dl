#ifndef CTSREADERBASE_H
#define CTSREADERBASE_H

#include <libngodobjtype.h>



#define ERROR_CODE_BASE 30000

enum 
{
        F_ERR = ERROR_CODE_BASE,
        F_ERR_REACH_END,
        F_ERR_OPEN_FAILD,
        F_ERR_INVALID_FD,
        F_ERR_UNKNOW   

};



class CTsReaderBase
{
public:
	CTsReaderBase();
	virtual ~CTsReaderBase();
	
	virtual bool Open(OVT_STRU_CREATE_USER_OBJ_INFO stInfo) = 0;
	virtual bool Open(const string& filename,const char* mode) = 0;
	
	
	/***********所有读取函数读取的数据量都应小于等于用户输出缓冲*************/
	
	/**
	 * @param pBuf 存储数据缓冲.
	 * @param nBufSize 缓冲大小
	 * @param llTimeCodePcr 仅通过libobj读取时此字段有意义
	 * @return >0 读取的数据长度, -1 读取到末尾， -2 缓冲不足，部分数据被丢弃
	 */
	virtual int ReadGop(BYTE* pBuf,int nBufSize,long long &beginpcrvalue,
			    long long &endpcrvalue,long long &llTimeCodePcr) = 0;
	virtual int Read(BYTE* pBuf,int nBufSize) = 0;
	virtual bool Close() = 0;
	
	virtual bool Seek(long long llTimeCode) = 0;
	virtual bool Switch(float fScale) = 0;
};

#endif // CTSREADERBASE_H
