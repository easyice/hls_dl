#ifndef CHTTPMODULENORMALTS_H
#define CHTTPMODULENORMALTS_H

#include "chttpmodbase.h"


class CHttpModTs : public CHttpModBase
{
public:
	CHttpModTs();
	~CHttpModTs();
	
	virtual SEND_RES_T ProcessNewRequest(SP_HttpRequest * request,CONNECTION_T* pConn);
	
	
        virtual int OnRequestContinue(CONNECTION_T* pConn);
	
protected:
	/**
	 * @brief 解析请求并组织返回数据到 m_pSendBuf ,要保证 m_pSendBuf 中的数据小于pSession中的缓冲大小
	 * @return 0,没有要发送的数据，1，待发数据已放入 m_pSendBuf
	 */
	virtual int OnRequest(SP_HttpRequest * request,CONNECTION_T* pConn,int& status);

	virtual SEND_RES_T HttpSendBuffer(CONNECTION_T* pConn,bool bAddHead);
	
	virtual void GenHttpHead(int content_len);
	
private:
        /**
         * @brief 读取TS并负责切片
         * @return 返回读取的数据长度, < 0 文件末尾,= 0发送一个0大小的chunk
         */
	int ReadAndSegmente(CONNECTION_T* pConn);
};

#endif // CHTTPMODULENORMALTS_H
