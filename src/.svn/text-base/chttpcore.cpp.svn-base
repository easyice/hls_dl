#include "chttpcore.h"
#include "chttpmodm3u8.h"
#include "chttpmodts.h"
#include "chttpmodtestpage.h"
#include "chttpmodtestvideo.h"
#include "chttpmodctl.h"




CHttpCore::CHttpCore(char* pHead,int nHeadSize,BYTE* pBody,int nBodySize)
{
	m_vecModules.resize(REQ_TYPE_UNKNOWN);
	
	m_vecModules[REQ_TYPE_M3U8] = new CHttpModM3u8();
	m_vecModules[REQ_TYPE_TS] = new CHttpModTs();
	m_vecModules[REQ_TYPE_CTL] = new CHttpModCtl();
	m_vecModules[REQ_TYPE_TEST_PAGE] = new CHttpModTestPage();
	m_vecModules[REQ_TYPE_TEST_VIDEO] = new CHttpModTestVideo();
	
	
	vector<CHttpModBase*>::iterator it = m_vecModules.begin();
	for(; it != m_vecModules.end(); ++it)
	{
		(*it)->SetParam(pHead,nHeadSize,pBody,nBodySize);
	}
}

CHttpCore::~CHttpCore()
{
	vector<CHttpModBase*>::iterator it = m_vecModules.begin();
	for(; it != m_vecModules.end(); ++it)
	{
		delete *it;
	}
	
	m_vecModules.clear();
}

CHttpModBase* CHttpCore::GetHttpModule(REQ_TYPE_T reqType)
{
	return m_vecModules[reqType];
}


