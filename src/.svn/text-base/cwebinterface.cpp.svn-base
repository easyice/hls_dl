void CWebInterface::Regist()
{
        REGISTER_COMMAND("/OTT_VSS/", "GetConnectCount","获当前取连接数", GetConnectCount, this);
        REGISTER_COMMAND("/OTT_VSS/", "GetUserCount","获取当前用户数", GetUserCount, this);
        //REGISTER_COMMAND("/OTT_VSS/", "ShowBusyUsers","显示正在处理中用户", ShowBusyUsers, this);
}

bool CWebInterface::GetConnectCount(map< string, ZAny >& Params, void* pUserData, string& Result)
{
        //CWebInterface * lpthis = (CWebInterface*)pUserData;
        
        stringstream ss;
        ss << "<ConnectCount>";
 
        ss << CConnectionMgr::GetInstancePtr()->GetConnectionCount();
        
        ss << "</ConnectCount>";
        
        Result = ss.str();
        return true;
}

bool CWebInterface::GetUserCount(map< string, ZAny >& Params, void* pUserData, string& Result)
{
        //CWebInterface * lpthis = (CWebInterface*)pUserData;
        
        stringstream ss;
        ss << "<UserCount>";
 
        ss << CSessionMgr::GetInstancePtr()->GetUserCount();
        
        ss << "</UserCount>";
        
        Result = ss.str();
        
        return true;
}

