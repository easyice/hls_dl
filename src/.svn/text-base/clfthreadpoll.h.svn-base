#ifndef CLFTHREADPOLL_H
#define CLFTHREADPOLL_H

#include <pthread.h>
#include <vector>

using namespace std;




class CHttpServer;
class CEventHandle;



typedef struct _THREAD_PARAM_T
{
	_THREAD_PARAM_T()
	{
		lpThis = NULL;
		pEventHandle = NULL;
	}
	
	void* lpThis;
	CEventHandle* pEventHandle;
}THREAD_PARAM_T;

///线程池
class CLFThreadPoll
{

public:
	CLFThreadPoll(CHttpServer* s);
	~CLFThreadPoll();
    
	void SetMaxThreads( int maxThreads );
	
	void Start();
    
	void Destroy();
private:
	
	static void* WorkThread(void* pParam);
	void WorkFun(CEventHandle* pEventHandle);
	
	void PromoteNewLeader();
	void WaitToLeader();
	
private:
	CHttpServer* m_pHttpServer;
	vector<CEventHandle*> m_vecEventHandler;
	
	int m_nMaxThreads;
	
	pthread_t* m_pThreadid;
	THREAD_PARAM_T* m_pThreadParam;
	pthread_mutex_t m_mutexWork;
};

#endif // CLFTHREADPOLL_H
